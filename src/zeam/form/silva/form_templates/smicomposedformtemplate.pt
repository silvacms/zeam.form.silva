<tal:composedform>
  <table class="listing">
    <thead>
      <tr tal:condition="view/label">
        <td class="top">
          <h2>
            <img tal:replace="structure python:context.render_icon(context)" />
            <tal:inline tal:content="view/label"
                        i18n:translate="">table label</tal:inline>
          </h2>
        </td>
      </tr>
      <tr class="odd"
          tal:condition="view/description | nothing">
        <td class="designator"
            tal:content="view/description">
        </td>
      </tr>
    </thead>
    <tbody>
      <tr class="top-controls"
          tal:define="formlabel view/formlabel | nothing"
          tal:condition="formlabel">
        <td>
          <h3 tal:content="formlabel"
              i18n:translate="">
            form label
          </h3>
        </td>
      </tr>
    </tbody>
    <tfoot tal:condition="view/actionWidgets">
      <tr class="controls" tal:condition="view/actionWidgets">
        <td colspan="2">
          <input tal:repeat="widget view/actionWidgets"
                 tal:replace="structure widget/render" />
        </td>
      </tr>
    </tfoot>
  </table>
  <tal:repeat tal:repeat="form view/subforms"
              tal:replace="structure form/render">
  </tal:repeat>
</tal:composedform>
